{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": false,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "skipLibCheck": true,
    "lib": ["ES2021.String"]
  },
  "compileOnSave": true,
  "include": ["src"]
}
