{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "skipLibCheck": true,
    "paths": {
      "@dialogflow/*": ["./src/dialogflow/*"],
      "@line/*": ["./src/line/*"]
    }
  },
  "compileOnSave": true,
  "include": ["src"]
}
